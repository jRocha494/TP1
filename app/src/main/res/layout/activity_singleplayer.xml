<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp"
    tools:context=".SingleplayerActivity">

    <LinearLayout
        android:id="@+id/llData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/llScoreLevel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/scoreTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_secondary"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Score: ---"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/levelTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_secondary"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Level: ---"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llAttempts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/llScoreLevel"
            android:layout_weight="1">
            <TextView
                android:id="@+id/correctAnswersTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_secondary"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Correct: ---"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/wrongAnswersTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_secondary"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Wrong: ---"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/llData"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:flow_horizontalAlign="center">
        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_secondary"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Time: ---"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tabGv" />

        <GridView
            android:id="@+id/tabGv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="3dp"
            android:numColumns="5"
            android:stretchMode="columnWidth"
            android:verticalSpacing="3dp"
            app:layout_constraintTop_toBottomOf="@id/llAttempts"
            app:layout_constraintBottom_toBottomOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>